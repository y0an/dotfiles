# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

# reload the i3 config when I left click on the i3status time module
# and restart i3 when I middle click on it 


general {
        colors = true
        interval = 5
}

#order += "ipv6"
order += "static_string term"
order += "static_string web"
order += "disk /"
order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "sysdata"
order += "backlight"
order += "volume_status master"
order += "tztime local"
order += "whoami"
order += "static_string suspend"

backlight { 
        format = " {level}%"
}

volume_status master {
        format = " {percentage}%"
        format_muted = " muted"
        device = "default"
        command = "amixer"
        thresholds = [
                (0, "#FF0000"),
                (10, "#E2571E"),
                (20, "#FF7F00"),
                (30, "#FFFF00"),
                (40, "#00FF00"),
                (50, "#96BF33"),
                (60, "#0000FF"),
                (70, "#4B0082"),
                (80, "#8B00FF"),
                (90, "#FFFFFF")
        ]
}

wireless _first_ {
        format_up = " (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        #format = "%status %percentage %remaining"
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = ""
        status_bat = ""
        status_full = ""
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        format= " VPN"
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%d/%m %H:%M"
        on_click 1 = "reload"
}

sysdata {
        format = "CPU@{cpu_usage} MEM@{mem_used_percent}"
}

disk "/" {
        format = " %avail"
        on_click 1 = "exec thunar /"
}

static_string term {
        format = "  "
        on_click 1 = "exec terminator"
}

static_string web {
        format = "  "
        on_click 1 = "exec chromium-browser"
}

whoami {
        format = "  {username} "
        on_click 1 = "exec lock"
}

static_string suspend {
        format = "  "
        on_click 1 = "exec systemctl suspend"
}